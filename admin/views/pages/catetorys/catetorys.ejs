

<div class="text-center rounded text-info h5" style="margin-bottom: 20px;"> 
    <marquee behavior="scroll" direction="left">
        <%=title %>
    </marquee>
</div>
<div class="container d-flex justify-content-between">
    <div>
        <a href="/addCatetory" class="btn btn-primary active" aria-current="page">Add Catetorys</a>
        <a href="/catetorys" class="btn btn-warning active" aria-current="page">Home Catetorys</a>
    </div>
    
    <form class="d-flex" action="/catetorys">
        <div class="input-group rounded-end" onclick="info3()">
            <input type="text" class="form-control" placeholder="Search" name="key">
            <button type="submit" class="btn btn-secondary"><i class="fas fa-search"></i></button>
        </div>
    </form>
</div>

<div class="mt-3 container">
    <table class="mt-2 table table-striped table-bordered table-sm text-center">
        <thead class="thead-info">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% catetorys.forEach(element => { %>
                <tr>
                    <td><%=element.Id%></td>
                    <td><%=element.name%></td>
                    <%if(element.status ==1) {%>
                        <td><a href="active2?id=<%=element.Id%>">Active</a></td>
                    <%} else {%>
                        <td><a href="active2?id=<%=element.Id%>">No Active</a></td>
                    <%}%>
                    <td>
                        <a href="update2?id=<%=element.Id%>">Update</a>
                    </td>
                    <td><a href="delete2?id=<%=element.Id%>">Delete</a></td>
                </tr>
            <% });  %>
        </tbody>
    </table>
    <div class="container col-sm-12 mt-5 mb-5" style="position:relative">
        <div class="row">
            <div class="col-md-5" style="left: 0; padding-left: 0;">
                <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">
                    Showing 1 to 10 of <%= allCatetory%> entries
                </div>
            </div>
            <div class="col-md-7" >
                <div class="dataTables_paginate paging_simple_numbers  position" id="datatable_paginate" >
                    <ul class="pagination" style="position: absolute; right: 0;">
                        <li class="paginate_button page-item previous disabled" id="datatable_previous">
                            <a href="#" aria-controls="datatable" data-dt-idx="0" tabindex="" class="page-link">Previous</a>
                        </li>
                        <!-- <li class="paginate_button page-item ">
                            <a href="/catetorys" aria-controls="datatable" data-dt-idx="1" tabindex="0" class="page-link">1</a>
                        </li> -->
                        <% for (let i= 1; i<=totalPage; i++) {%>
                            <%if(i==1) {%>
                                <li class="paginate_button page-item ">
                                    <a href="/catetorys" aria-controls="datatable" data-dt-idx="<%=i%>" tabindex="" class="page-link"><%=i%></a>
                                </li>
                            <%}else{%>
                                <li class="paginate_button page-item ">
                                    <a href="/catetorys?page=<%=i%>" aria-controls="datatable" data-dt-idx="<%=i%>" tabindex="" class="page-link"><%=i%></a>
                                </li>
                            <%}%>
                        <%}%>
                        <li class="paginate_button page-item next" id="datatable_next">
                            <a href="#" aria-controls="datatable" data-dt-idx="" tabindex="" class="page-link">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
